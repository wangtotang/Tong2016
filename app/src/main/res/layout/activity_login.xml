<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_material_grey_100">


    <ImageView
        android:layout_width="@dimen/logo_index_size"
        android:layout_height="@dimen/logo_index_size"
        android:src="@drawable/ic_logo_index"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_login_qq"
            android:text="Q Q 登录"
            style="@style/Button.Login"
            android:textColor="@color/color_material_blue_500"
            android:drawableLeft="@drawable/ic_qq" />

        <Button
            android:id="@+id/btn_login_weibo"
            android:text="微博登录"
            style="@style/Button.Login"
            android:textColor="@color/color_material_red_500_primary"
            android:drawableLeft="@drawable/ic_weibo"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btn_login_wechat"
            android:text="微信登录"
            style="@style/Button.Login"
            android:textColor="@color/color_material_green_500"
            android:drawableLeft="@drawable/ic_wechat"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</LinearLayout>
