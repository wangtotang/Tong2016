<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">@dimen/btn_login_width</item>
        <item name="android:layout_height">@dimen/btn_login_height</item>
        <item name="android:gravity">fill|center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingLeft">50dp</item>
    </style>

    <style name="Button.Login" parent="Button">
        <item name="android:background">@drawable/shape_btn_login</item>
    </style>

    <style name="Button.Article" parent="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/btn_item_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:background">@color/color_material_ffffff</item>
        <item name="android:textColor">@color/color_material_grey_600</item>
    </style>

    <style name="Item">
        <item name="android:background">@color/color_material_ffffff</item>
    </style>

    <style name="cardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
